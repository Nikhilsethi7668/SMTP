# Server Configuration
PORT=3000
NODE_ENV=production

# Database
MONGO_URI=atlus db url

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# BullMQ Configuration
# Queue concurrency (number of jobs processed simultaneously)
QUEUE_CONCURRENCY=5

# Email Delay Configuration
# Random delay range before sending each email (in seconds) - applied by worker
EMAIL_DELAY_MIN_SECONDS=5
EMAIL_DELAY_MAX_SECONDS=30

# Email Schedule Delay Configuration (in minutes)
# Delay range for scheduling emails throughout the day (applied by scheduler)
EMAIL_SCHEDULE_MIN_MINUTES=5
EMAIL_SCHEDULE_MAX_MINUTES=60

# Scheduler Configuration (Cron)
# Cron expression for checking active warmup emails
# Examples:
#   '*/15 * * * *' - Every 15 minutes (default)
#   '0 * * * *' - Every hour at minute 0
#   '0 */2 * * *' - Every 2 hours
#   '0 9 * * *' - Every day at 9 AM
CRON_SCHEDULE=*/15 * * * *

# Timezone for cron scheduler
TZ=UTC

# Add your other environment variables here

